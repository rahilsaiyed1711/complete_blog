<!DOCTYPE html>
<html lang="en">

<head> 
    <%- include('./partials/head') %>
    <title>Blog Home</title>
    <!-- Add Bootstrap CSS if not already included in head -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <%- include('./partials/nav') %>

    <!-- Main container for blog posts -->
    <div class="container mt-4">
        <!-- Blog Title (optional) -->
        <h1 class="text-center mb-4">Our Blog Posts</h1>

        <!-- Grid of blog cards -->
        <div class="row">
            <% blogs.forEach(blog => { %>
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm rounded-lg">
                        <!-- Card Image -->
                        <img class="card-img-top" src="<%= blog.coverImageURL %>" alt="Blog Image" style="height: 200px; object-fit: cover;">
                        
                        <div class="card-body">
                            <!-- Blog Title -->
                            <h5 class="card-title"><%= blog.title %></h5>
                            <!-- View Button -->
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary stretched-link">View Post</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- Footer (optional) -->
      <%-include('./partials/footer') %>


    <!-- Add Bootstrap JS and Popper.js -->
    <%- include('./partials/scripts') %>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>

</html>
